FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files
COPY ../../frontend/package*.json ./
RUN npm install

# Copy frontend code
COPY ../../frontend .

# Build the app
RUN npm run build || echo "No build script, using dev"

# Production stage
FROM node:18-alpine
WORKDIR /app
RUN npm install -g serve
COPY --from=builder /app .
EXPOSE 3000
CMD ["serve", "-s", "build", "-l", "3000"]
